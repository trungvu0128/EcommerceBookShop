@model WebApp.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
@{

    string[] ImgItems = null;
}
<div class="container">
    <div class="row">
        @await Html.PartialAsync("MenuCategory.cshtml")
        <div class="col-lg-9">
            <div class="row products">
                @foreach (Product item in Model.Products)
                {

                    if (item.Img != null)
                    {
                        ImgItems = item.Img.Split(",");
                        <div class="col-lg-4 col-md-6">
                            <div class="product">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front"><a href="detail.html"><img src="~/Img/Pro/@ImgItems[0]" alt="" class="img-fluid"></a></div>
                                        <div class="back"><a href="detail.html"><img src="~/Img/Pro/@ImgItems[1]" alt="" class="img-fluid"></a></div>
                                    </div>
                                </div><a href="detail.html" class="invisible"><img src="~/Img/Pro/@ImgItems[0]" alt="" class="img-fluid"></a>
                                <div class="text">
                                    <h3><a href="detail.html">@item.Name</a></h3>
                                    <p class="price">
                                        <del></del>@item.UnitPrice VND
                                    </p>
                                    <p class="buttons"><a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-secondary">View detail</a>
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add to cart</a></p>
                                </div>
                                @if (item.Level == 1)
                                {
                                    <div class="ribbon sale">
                                        <div class="theribbon">SALE</div>
                                        <div class="ribbon-background"></div>
                                    </div>
                                    <!-- /.ribbon-->
                                    <div class="ribbon new">
                                        <div class="theribbon">HOT</div>
                                        <div class="ribbon-background"></div>
                                    </div>
                                }
                                <!-- /.text-->
                            </div>
                            <!-- /.product            -->
                        </div>
                    }
                }
            </div>
            <div class="pages">
                <p class="loadMore"><a href="#" class="btn btn-primary btn-lg"><i class="fa fa-chevron-down"></i> Load more</a></p>
                <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item"><a href="#" aria-label="Previous" class="page-link"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>
                        <li class="page-item active"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item"><a href="#" class="page-link">3</a></li>
                        <li class="page-item"><a href="#" class="page-link">4</a></li>
                        <li class="page-item"><a href="#" class="page-link">5</a></li>
                        <li class="page-item"><a href="#" aria-label="Next" class="page-link"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<style>
    .img-fluid {
        height: 300px;
    }
</style>